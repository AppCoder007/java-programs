public static double celsiusToFahrenheit(double celsius){
	int n = 0;
	double fahrenheit = 0;
	for (double i = celsius; i > 30; i--){
		n++;	
		for(int j=1;j<=n;j++){
			 fahrenheit = (9.0/5)*i + 32;
		}System.out.print(i+"\t\t"+fahrenheit+"|\n");
		
	}
	System.out.print("\n");
	return fahrenheit;
	}
public static double fahrenheitToCelsius(double fahrenheit){
	int n = 0;
	double celsius = 0;
	for (double i = fahrenheit; i > 30; i=i-10){
		n++;	
		for(int j=1;j<=n;j++){
			 celsius = (5.0/9)*(i - 32);
		}System.out.print(i+"\t\t"+celsius+"|\n");
	}
	return fahrenheit;
	
